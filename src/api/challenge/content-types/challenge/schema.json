{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "singularName": "challenge",
    "pluralName": "challenges",
    "displayName": "Challenge",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "shortDescription": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner"
    },
    "estimatedTime": {
      "type": "string"
    },
    "instructions": {
      "type": "richtext"
    },
    "previewImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "currentStatus": {
      "type": "enumeration",
      "enum": [
        "draft",
        "submissions_open",
        "voting",
        "completed",
        "archived"
      ],
      "default": "draft"
    },
    "votingStartDate": {
      "type": "datetime"
    },
    "votingEndDate": {
      "type": "datetime"
    },
    "submissionCount": {
      "type": "integer",
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "xpReward": {
      "type": "integer",
      "default": 50
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "challenge"
    },
    "winners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "profiles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::profile.profile",
      "mappedBy": "completedChallenges"
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    }
  }
}
