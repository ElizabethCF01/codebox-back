{
  "kind": "collectionType",
  "collectionName": "profiles",
  "info": {
    "singularName": "profile",
    "pluralName": "profiles",
    "displayName": "Profile",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "profile"
    },
    "bio": {
      "type": "richtext"
    },
    "githubUser": {
      "type": "string"
    },
    "totalXP": {
      "type": "integer",
      "default": 0
    },
    "level": {
      "type": "integer",
      "default": 1
    },
    "challengesCompleted": {
      "type": "integer",
      "default": 0
    },
    "challengesWon": {
      "type": "integer",
      "default": 0
    },
    "streak": {
      "type": "integer",
      "default": 0
    },
    "lastActivityDate": {
      "type": "datetime"
    },
    "badges": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::badge.badge",
      "inversedBy": "profiles"
    },
    "completedChallenges": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::challenge.challenge",
      "inversedBy": "profiles"
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "profile"
    }
  }
}
